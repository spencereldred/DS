<head>
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
  <meta charset="utf-8">
  <style>
    html, body, #map-canvas {
      height: 50%;
      margin: 10px;
      padding: 30px
    }
  </style>
  <script src="https://maps.googleapis.com/maps/api/js?sensor=true" type="text/javascript"></script>
</head>

<body>
<ul class="nav nav-pills">
  <li><%= link_to('New route', new_route_path) %></li>
  <li><%= link_to('Edit route', edit_route_path(@route)) %></li>
  <li><%= link_to('Show routes', routes_path) %> </li>   <!-- index -->
  <li><%= link_to('Delete route', @route, :method => :delete, :confirm => 'Are you sure?') %></li>
  <li><%= link_to('Sign out', signout_path, :method => :delete )%></li>
  <div class='spacer'></div>
</ul>

<div class="row">
  <div class="col-md-5 col-sm-5">
    <p class="lead">Route:</p>
    <p><%= @route.starting_point %>  to <%= @route.end_point %> </p>
    <br>
  </div>
</div> 


<!-- ADD MAP OF ROUTE BELOW HERE -->
  <div id="map-canvas"></div>

</body>

<footer>
    <script>

    function initialize() {
      var userLatlng = new google.maps.LatLng (37.09,-95.71); 
      var mapOptions = {
        zoom: 4,
        center: userLatlng,
        mapTypeId: google.maps.MapTypeId.ROADMAP
      };
      var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
    }
    google.maps.event.addDomListener(window, 'load', initialize);
  </script>
</footer>

